@font-face {
  font-family: Pixels;
  src: url('/static/Apple2.woff') format('woff');
}

*, *::before, *::after {
	box-sizing: border-box;
}

html, body {
	min-height: 100%;
}

html
	font-family Pixels;
	background: rgb(255,255,255);
	background: linear-gradient(0deg, rgba(0,212,255,1) 10%, #7FDBFF 90%);
	background-attachment fixed
	height 100%
	color #001F3F

body {
	margin: 0;
	padding: 2em 0;
	background-image: url(/static/PixelArt.png);
	background-size: contain;
	background-color: hsla(0, 100%, 100%, 0.5);
	// background-blend-mode: screen;
}

h1, h2, h3, h4, h5, h6 {
	font-family: Pixels;
}

a {
	color: #001F3F;
}

main
	margin: 0 auto;
	padding: 0 1em;
	width: 100%;
	max-width: 50em;

h1, h2
	text-align center
	font-weight normal
	font-size 3em
	margin: 0 0 1.5em

h1 {
	background-color: #001F3F;
	color: white;
	padding: 0.25em;
	text-transform: uppercase;
	box-shadow: 0.25em 0, 0 0.25em, -0.25em 0, 0 -0.25em;
}

form
	width 100%
	text-align: center

label
	display: block;
	font-size: 1.25em;
	margin-bottom: 0.5em;

input, button
	font-size 1.25em
	font-family Pixels;

input
	width 100%
	padding: 0.5em
	// border: 0.25em solid
	border-radius: 0;
	border: 0;
	-webkit-appearance: none;
	appearance: none;
	padding-left: 3.5em;
	box-shadow: 0.25em 0, 0 0.25em, -0.25em 0, 0 -0.25em;


.submit-button {
	background-color #001F3F
	color white
	margin: 1em auto 0;
	padding: 0.5em 1em;
	cursor: pointer;
	border: 0;
	box-shadow: 0.25em 0 , 0 0.25em, -0.25em 0, 0 -0.25em;
}

.submit-button:focus,
.submit-button:hover {
	background-color: white;
	color: #001F3F;
}

.input-wrapper {
	position: relative;
}

.input-wrapper::before {
	content: "@"
	position: absolute;
  left: 0;
  top: 0;
  font-size: 1.5em;
  height: 100%;
  border-right: 0.25em solid black;
  width: 2.5em;
	line-height: 2
	text-indent: 0.25em
}
